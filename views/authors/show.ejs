<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Title</title>
</head>
<body>

   <a href="/posts/<%= author.id%>/new">Add a new post</a>

  <h1>All of <%= author.name%>'s posts</h1>

  <% allPosts.forEach(function(post){ %>
  <p>
  <%= post.title %>
  <br>
  <a href="/posts/<%= post.id %>/edit">Edit this post</a>
  </p>

  <form action="/posts/<%= post.id %>?_method=delete" method="post">
    <input type="submit" value="Delete this post">
  </form>

  <% }); %>
<p>
<br>
  <a href="/authors">See all authors</a>
<br>
  <a href="/posts">See all posts</a>
</p>

</body>
</html>